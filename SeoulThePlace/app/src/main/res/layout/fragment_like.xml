<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.LikeFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottom_bar"
            android:fontFamily="@font/font_family"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="좋아요"
            android:textColor="#3B3B44"
            android:textSize="@dimen/maintab_title"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/toggle_tab"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        tl:tl_bar_color="#ffffff"
        tl:tl_indicator_color="#2C97DE"
        tl:tl_indicator_corner_radius="8dp"
        tl:tl_tab_padding="20dp"/>

    <FrameLayout
        android:id="@+id/course_place_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
