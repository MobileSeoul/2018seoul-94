<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ffffffff"
        android:gravity="top|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottom_bar"
            android:fontFamily="@font/font_family"
            android:gravity="center_vertical|center_horizontal"
            android:text="더보기"
            android:textColor="#ff000000"
            android:textSize="@dimen/maintab_title"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@drawable/texteditbox3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/setting_icon_size"
                android:layout_height="@dimen/setting_icon_size"
                android:layout_marginLeft="@dimen/setting_margin_left"
                android:src="@drawable/setting_logout" />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:fontFamily="@font/font_family"
                android:gravity="center_vertical|left"

                android:text="로그아웃"
                android:textColor="#ff000000"
                android:textSize="@dimen/setting_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@drawable/texteditbox3"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/setting_icon_size"
                android:layout_height="@dimen/setting_icon_size"
                android:layout_marginLeft="@dimen/setting_margin_left"
                android:src="@drawable/setting_user" />

            <Button
                android:id="@+id/makers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:fontFamily="@font/font_family"
                android:gravity="center_vertical|left"

                android:text="만든이들"
                android:textColor="#ff000000"
                android:textSize="@dimen/setting_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@drawable/texteditbox3"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/setting_icon_size"
                android:layout_height="@dimen/setting_icon_size"
                android:layout_marginLeft="@dimen/setting_margin_left"
                android:scaleType="centerCrop"
                android:src="@drawable/setting_info" />

            <Button
                android:id="@+id/introduceApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@null"
                android:fontFamily="@font/font_family"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|left"
                android:text="앱소개"
                android:textColor="#ff000000"
                android:textSize="@dimen/setting_text_size" />

        </LinearLayout>

        <Button
            android:id="@+id/versionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:focusable="false"
            android:fontFamily="@font/font_family"
            android:gravity="center_vertical|center_horizontal"
            android:text="버전 정보 / 1.0.0"
            android:textColor="#595959"
            android:textSize="15sp" />


    </LinearLayout>
</FrameLayout>